[
    {
        "description": "FAIL verb (*FAIL) - force match failure",
        "pattern": "a(*FAIL)|b",
        "flags": "",
        "tests": [
            {
                "description": "first alternative fails, try second",
                "input": "b",
                "matches": [
                    {
                        "start": 0,
                        "end": 1,
                        "match": "b",
                        "groups": []
                    }
                ]
            },
            {
                "description": "a always fails due to FAIL verb",
                "input": "a",
                "matches": []
            }
        ]
    },
    {
        "description": "PRUNE verb (*PRUNE) - prevent backtracking",
        "pattern": "a(*PRUNE)b|ab",
        "flags": "",
        "tests": [
            {
                "description": "first alternative succeeds",
                "input": "ab",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "ab",
                        "groups": []
                    }
                ]
            },
            {
                "description": "pruning prevents second alternative",
                "input": "ac",
                "matches": []
            }
        ]
    },
    {
        "description": "SKIP verb (*SKIP) - skip to here on failure",
        "pattern": "a(*SKIP)(*FAIL)|a.",
        "flags": "",
        "tests": [
            {
                "description": "skip past single 'a'",
                "input": "aab",
                "matches": [
                    {
                        "start": 1,
                        "end": 3,
                        "match": "ab",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "COMMIT verb (*COMMIT) - prevent all backtracking",
        "pattern": "a(*COMMIT)b|ac",
        "flags": "",
        "tests": [
            {
                "description": "commit to first alternative",
                "input": "ab",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "ab",
                        "groups": []
                    }
                ]
            },
            {
                "description": "commit blocks trying second alternative",
                "input": "ac",
                "matches": []
            }
        ]
    },
    {
        "description": "ACCEPT verb (*ACCEPT) - end match successfully",
        "pattern": "a(*ACCEPT)b",
        "flags": "",
        "tests": [
            {
                "description": "match ends at ACCEPT",
                "input": "ab",
                "matches": [
                    {
                        "start": 0,
                        "end": 1,
                        "match": "a",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "SKIP with name (*SKIP:NAME)",
        "pattern": "a(*SKIP:skip)b|a(*MARK:skip)c",
        "flags": "",
        "tests": [
            {
                "description": "skip to marked position",
                "input": "ac",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "ac",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "MARK verb (*MARK:NAME) - mark position",
        "pattern": "(*MARK:start)a|b",
        "flags": "",
        "tests": [
            {
                "description": "mark at start of pattern",
                "input": "a",
                "matches": [
                    {
                        "start": 0,
                        "end": 1,
                        "match": "a",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "THEN verb (*THEN) - jump to next alternative",
        "pattern": "a(*THEN)b|ab",
        "flags": "",
        "tests": [
            {
                "description": "THEN forces next alternative",
                "input": "ab",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "ab",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Complex verb combination",
        "pattern": "(?:a(*PRUNE)b|c)d",
        "flags": "",
        "tests": [
            {
                "description": "first with prune",
                "input": "abd",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "abd",
                        "groups": []
                    }
                ]
            },
            {
                "description": "second alternative",
                "input": "cd",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "cd",
                        "groups": []
                    }
                ]
            }
        ]
    }
]
