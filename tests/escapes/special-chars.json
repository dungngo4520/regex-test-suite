[
    {
        "description": "Escape sequences - basic",
        "pattern": "\\n\\r\\t",
        "flags": "",
        "tests": [
            {
                "description": "match newline, carriage return, tab",
                "input": "\n\r\t",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "\n\r\t",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Literal backslash",
        "pattern": "\\\\",
        "flags": "",
