            {
                "description": "match single backslash",
                "input": "\\",
                "matches": [
                    {
                        "start": 0,
                        "end": 1,
                        "match": "\\",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Escaped metacharacters",
        "pattern": "\\+\\*\\?\\[\\]\\(\\)\\{\\}\\^\\$\\|",
        "flags": "",
        "tests": [
            {
                "description": "match all escaped metacharacters",
                "input": "+*?[](){}^$|",
                "matches": [
                    {
                        "start": 0,
                        "end": 12,
                        "match": "+*?[](){}^$|",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
