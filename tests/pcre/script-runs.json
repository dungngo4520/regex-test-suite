[
    {
        "description": "Script run (*sr) - basic",
        "pattern": "(*sr:\\w+)",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "single script (Latin)",
                "input": "hello",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "hello",
                        "groups": []
                    }
                ]
            },
            {
                "description": "no match - mixed scripts",
                "input": "hello\u043f\u0440\u0438\u0432\u0435\u0442",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "hello",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Script run with Cyrillic",
        "pattern": "(*sr:\\w+)",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "pure Cyrillic",
                "input": "\u043f\u0440\u0438\u0432\u0435\u0442",
                "matches": [
                    {
                        "start": 0,
                        "end": 6,
                        "match": "\u043f\u0440\u0438\u0432\u0435\u0442",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Script run with Greek",
        "pattern": "(*sr:[\u03b1-\u03c9\u0391-\u03a9]+)",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "Greek text",
                "input": "\u0391\u03bb\u03c6\u03b1",
                "matches": [
                    {
                        "start": 0,
                        "end": 4,
                        "match": "\u0391\u03bb\u03c6\u03b1",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Script run with numbers (Common script)",
        "pattern": "(*sr:\\w+)",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "letters and numbers (Common allowed)",
                "input": "test123",
                "matches": [
                    {
                        "start": 0,
                        "end": 7,
                        "match": "test123",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Atomic script run (*asr)",
        "pattern": "(*asr:\\w+)",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "atomic - no backtracking",
                "input": "hello",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "hello",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Script run preventing spoofing",
        "pattern": "^(*sr:\\w+)$",
        "flags": "",
        "minVersion": "10.40",
        "tests": [
            {
                "description": "pure script accepted",
                "input": "domain",
                "matches": [
                    {
                        "start": 0,
                        "end": 6,
                        "match": "domain",
                        "groups": []
                    }
                ]
            },
            {
                "description": "no match - mixed script rejected",
                "input": "d\u03bfmain",
                "matches": []
            }
        ]
    }
]
