[
    {
        "description": "Named capturing group (?<name>...)",
        "pattern": "@[named:user,\\w+]@@[named:domain,\\w+]",
        "flags": "",
        "tests": [
            {
                "description": "capture named groups",
                "input": "john@example",
                "matches": [
                    {
                        "start": 0,
                        "end": 12,
                        "match": "john@example",
                        "groups": [
                            "john",
                            "example"
                        ],
                        "namedGroups": {
                            "user": "john",
                            "domain": "example"
                        }
                    }
                ]
            }
        ]
    },
    {
        "description": "Named backreference \\k<name>",
        "pattern": "@[named:word,\\w+]\\s+@[backref:word]",
        "flags": "",
        "tests": [
            {
                "description": "match repeated word",
                "input": "hello hello",
                "matches": [
                    {
                        "start": 0,
                        "end": 11,
                        "match": "hello hello",
                        "groups": [
                            "hello"
                        ],
                        "namedGroups": {
                            "word": "hello"
                        }
                    }
                ]
            },
            {
                "description": "no match - different words",
                "input": "hello world",
                "matches": []
            }
        ]
    },
    {
        "description": "Named group with alternation",
        "pattern": "@[named:proto,https?|ftp]://@[named:host,\\w+]",
        "flags": "",
        "tests": [
            {
                "description": "match http",
                "input": "http://example",
                "matches": [
                    {
                        "start": 0,
                        "end": 14,
                        "match": "http://example",
                        "groups": [
                            "http",
                            "example"
                        ],
                        "namedGroups": {
                            "proto": "http",
                            "host": "example"
                        }
                    }
                ]
            },
            {
                "description": "match https",
                "input": "https://example",
                "matches": [
                    {
                        "start": 0,
                        "end": 15,
                        "match": "https://example",
                        "groups": [
                            "https",
                            "example"
                        ],
                        "namedGroups": {
                            "proto": "https",
                            "host": "example"
                        }
                    }
                ]
            },
            {
                "description": "match ftp",
                "input": "ftp://example",
                "matches": [
                    {
                        "start": 0,
                        "end": 13,
                        "match": "ftp://example",
                        "groups": [
                            "ftp",
                            "example"
                        ],
                        "namedGroups": {
                            "proto": "ftp",
                            "host": "example"
                        }
                    }
                ]
            }
        ]
    },
    {
        "description": "Multiple named groups",
        "pattern": "@[named:year,\\d{4}]-@[named:month,\\d{2}]-@[named:day,\\d{2}]",
        "flags": "",
        "tests": [
            {
                "description": "parse date",
                "input": "2023-12-25",
                "matches": [
                    {
                        "start": 0,
                        "end": 10,
                        "match": "2023-12-25",
                        "groups": [
                            "2023",
                            "12",
                            "25"
                        ],
                        "namedGroups": {
                            "year": "2023",
                            "month": "12",
                            "day": "25"
                        }
                    }
                ]
            }
        ]
    },
    {
        "description": "Nested named groups",
        "pattern": "@[named:full,@[named:first,\\w+]\\s+@[named:last,\\w+]]",
        "flags": "",
        "tests": [
            {
                "description": "capture full name and parts",
                "input": "John Doe",
                "matches": [
                    {
                        "start": 0,
                        "end": 8,
                        "match": "John Doe",
                        "groups": [
                            "John Doe",
                            "John",
                            "Doe"
                        ],
                        "namedGroups": {
                            "full": "John Doe",
                            "first": "John",
                            "last": "Doe"
                        }
                    }
                ]
            }
        ]
    }
]