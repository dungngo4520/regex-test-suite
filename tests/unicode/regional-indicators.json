[
    {
        "description": "Regional indicator pairs (flags)",
        "pattern": "[\\x{1F1E6}-\\x{1F1FF}]{2}",
        "flags": "",
        "tests": [
            {
                "description": "US flag",
                "input": "\ud83c\uddfa\ud83c\uddf8",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\ud83c\uddfa\ud83c\uddf8",
                        "groups": []
                    }
                ]
            },
            {
                "description": "UK flag",
                "input": "\ud83c\uddec\ud83c\udde7",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\ud83c\uddec\ud83c\udde7",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Multiple flag sequences",
        "pattern": "[\\x{1F1E6}-\\x{1F1FF}]{2}",
        "flags": "g",
        "tests": [
            {
                "description": "multiple flags",
                "input": "\ud83c\uddfa\ud83c\uddf8\ud83c\uddec\ud83c\udde7\ud83c\uddef\ud83c\uddf5",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\ud83c\uddfa\ud83c\uddf8",
                        "groups": []
                    },
                    {
                        "start": 2,
                        "end": 4,
                        "match": "\ud83c\uddec\ud83c\udde7",
                        "groups": []
                    },
                    {
                        "start": 4,
                        "end": 6,
                        "match": "\ud83c\uddef\ud83c\uddf5",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Regional indicators with text",
        "pattern": "[\\x{1F1E6}-\\x{1F1FF}]{2}",
        "flags": "",
        "tests": [
            {
                "description": "flag in text",
                "input": "Visit \ud83c\uddeb\ud83c\uddf7 France",
                "matches": [
                    {
                        "start": 6,
                        "end": 8,
                        "match": "\ud83c\uddeb\ud83c\uddf7",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unpaired regional indicator",
        "pattern": "[\\x{1F1E6}-\\x{1F1FF}]",
        "flags": "",
        "tests": [
            {
                "description": "single regional indicator",
                "input": "\ud83c\uddfa",
                "matches": [
                    {
                        "start": 0,
                        "end": 1,
                        "match": "\ud83c\uddfa",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Validate flag sequence length",
        "pattern": "^[\\x{1F1E6}-\\x{1F1FF}]{2}$",
        "flags": "",
        "tests": [
            {
                "description": "exactly two indicators",
                "input": "\ud83c\udde8\ud83c\udde6",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\ud83c\udde8\ud83c\udde6",
                        "groups": []
                    }
                ]
            },
            {
                "description": "no match - one indicator",
                "input": "\ud83c\udde8",
                "matches": []
            },
            {
                "description": "no match - three indicators",
                "input": "\ud83c\udde8\ud83c\udde6\ud83c\uddfa",
                "matches": []
            }
        ]
    },
    {
        "description": "Extract country codes from flags",
        "pattern": "([\\x{1F1E6}-\\x{1F1FF}])([\\x{1F1E6}-\\x{1F1FF}])",
        "flags": "",
        "tests": [
            {
                "description": "capture both indicators",
                "input": "\ud83c\udde9\ud83c\uddea",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\ud83c\udde9\ud83c\uddea",
                        "groups": [
                            "\ud83c\udde9",
                            "\ud83c\uddea"
                        ]
                    }
                ]
            }
        ]
    }
]
