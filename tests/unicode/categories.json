[
    {
        "description": "Unicode Letter property \\p{L} or \\p{Letter}",
        "pattern": "\\p{L}+",
        "flags": "",
        "tests": [
            {
                "description": "match Latin letters",
                "input": "Hello",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "Hello",
                        "groups": []
                    }
                ]
            },
            {
                "description": "match Greek letters",
                "input": "\u0393\u03b5\u03b9\u03b1",
                "matches": [
                    {
                        "start": 0,
                        "end": 4,
                        "match": "\u0393\u03b5\u03b9\u03b1",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Uppercase Letter \\p{Lu}",
        "pattern": "\\p{Lu}+",
        "flags": "",
        "tests": [
            {
                "description": "match uppercase",
                "input": "HELLO",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "HELLO",
                        "groups": []
                    }
                ]
            },
            {
                "description": "no match - lowercase",
                "input": "hello",
                "matches": []
            }
        ]
    },
    {
        "description": "Unicode Lowercase Letter \\p{Ll}",
        "pattern": "\\p{Ll}+",
        "flags": "",
        "tests": [
            {
                "description": "match lowercase",
                "input": "hello",
                "matches": [
                    {
                        "start": 0,
                        "end": 5,
                        "match": "hello",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Number \\p{N}",
        "pattern": "\\p{N}+",
        "flags": "",
        "tests": [
            {
                "description": "match ASCII digits",
                "input": "123",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "123",
                        "groups": []
                    }
                ]
            },
            {
                "description": "match Arabic-Indic digits",
                "input": "\u0660\u0661\u0662",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "\u0660\u0661\u0662",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Punctuation \\p{P}",
        "pattern": "\\p{P}+",
        "flags": "",
        "tests": [
            {
                "description": "match punctuation",
                "input": "!@#",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "!@#",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Mark \\p{M} - combining marks",
        "pattern": "\\p{M}+",
        "flags": "",
        "tests": [
            {
                "description": "match combining diacritical",
                "input": "\u0301\u0302",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\u0301\u0302",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Symbol \\p{S}",
        "pattern": "\\p{S}+",
        "flags": "",
        "tests": [
            {
                "description": "match currency symbols",
                "input": "$\u20ac\u00a3",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": "$\u20ac\u00a3",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Separator \\p{Z}",
        "pattern": "\\p{Z}+",
        "flags": "",
        "tests": [
            {
                "description": "match space separators",
                "input": " \u00a0\u2000",
                "matches": [
                    {
                        "start": 0,
                        "end": 3,
                        "match": " \u00a0\u2000",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Unicode Other \\p{C}",
        "pattern": "\\p{C}+",
        "flags": "",
        "tests": [
            {
                "description": "match control characters",
                "input": "\u0000\u0001",
                "matches": [
                    {
                        "start": 0,
                        "end": 2,
                        "match": "\u0000\u0001",
                        "groups": []
                    }
                ]
            }
        ]
    },
    {
        "description": "Negated property \\P{L} - non-letters",
        "pattern": "\\P{L}+",
        "flags": "",
        "tests": [
            {
                "description": "match non-letters",
                "input": "123!@#",
                "matches": [
                    {
                        "start": 0,
                        "end": 6,
                        "match": "123!@#",
                        "groups": []
                    }
                ]
            }
        ]
    }
]
